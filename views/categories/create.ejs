<%- include('../layout') %>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="fas fa-folder-plus me-2"></i>יצירת קטגוריה חדשה
                </h4>
            </div>
            <div class="card-body">
                <form method="POST" action="/categories/create">
                    <div class="mb-3">
                        <label for="name" class="form-label">שם הקטגוריה</label>
                        <input type="text" class="form-control" id="name" name="name" 
                               placeholder="למשל: עבודה, לימודים, בית" required>
                        <div class="form-text">שם הקטגוריה חייב להיות ייחודי</div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/categories" class="btn btn-secondary">
                            <i class="fas fa-arrow-right me-2"></i>חזור
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-2"></i>שמור קטגוריה
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 