<%- include('../layout') %>

<div class="row mb-4">
    <div class="col-md-8">
        <h2>
            <i class="fas fa-folder me-2"></i>ניהול קטגוריות
        </h2>
    </div>
    <div class="col-md-4 text-end">
        <a href="/categories/create" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>קטגוריה חדשה
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <% if (categories.length === 0) { %>
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-folder-open fa-3x mb-3"></i>
                        <h5>אין קטגוריות עדיין</h5>
                        <p>צור קטגוריה ראשונה כדי להתחיל לארגן את המשימות שלך</p>
                        <a href="/categories/create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>צור קטגוריה ראשונה
                        </a>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>שם הקטגוריה</th>
                                    <th>מספר משימות</th>
                                    <th>פעולות</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categories.forEach(category => { %>
                                    <tr>
                                        <td>
                                            <i class="fas fa-folder me-2 text-warning"></i>
                                            <%= category.name %>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary"><%= category.task_count || 0 %></span>
                                        </td>
                                        <td>
                                            <a href="/categories/edit/<%= category.id %>" class="btn btn-primary btn-sm">
                                                <i class="fas fa-edit"></i> ערוך
                                            </a>
                                            <% if (!category.task_count || category.task_count === 0) { %>
                                                <form method="POST" action="/categories/delete/<%= category.id %>" class="d-inline ms-1">
                                                    <button type="submit" class="btn btn-danger btn-sm" 
                                                            onclick="return confirm('האם אתה בטוח שברצונך למחוק את הקטגוריה הזו?')">
                                                        <i class="fas fa-trash"></i> מחק
                                                    </button>
                                                </form>
                                            <% } else { %>
                                                <button class="btn btn-secondary btn-sm ms-1" disabled title="לא ניתן למחוק קטגוריה שיש בה משימות">
                                                    <i class="fas fa-trash"></i> מחק
                                                </button>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div> 