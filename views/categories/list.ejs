<%- include('../partials/header') %>

<h2>קטגוריות</h2>
<a href="/categories/create">הוסף קטגוריה</a>

<table border="1">
  <tr>
    <th>שם</th>
    <th>עריכה</th>
    <th>מחיקה</th>
  </tr>
  <% for (var i = 0; i < categories.length; i++) { %>
    <% var c = categories[i]; %>
    <tr>
      <td><%= c.name %></td>
      <td><a href="/categories/edit/<%= c.id %>">ערוך</a></td>
      <td>
        <form method="POST" action="/categories/delete/<%= c.id %>" style="display:inline;">
          <button type="submit" onclick="return confirm('למחוק?')">מחק</button>
        </form>
      </td>
    </tr>
  <% } %>
</table>

<%- include('../partials/footer') %>
