<%- include('../partials/header') %>

<h1>הוספת משימה</h1>

<% if (error) { %>
    <div style="color:red"><%= error %></div>
<% } %>

<form action="/tasks/create" method="post">
    <label for="desc">תיאור משימה</label>
    <input type="text" name="description" id="desc" required>
    <br>

    <label for="due">תאריך יעד</label>
    <input type="date" name="due_date" id="due" required>
    <br>

    <label for="cat">קטגוריה</label>
    <select name="category_id" id="cat" required>
        <% for (var i = 0; i < categories.length; i++) { %>
            <option value="<%= categories[i].id %>"><%= categories[i].name %></option>
        <% } %>
    </select>
    <br>

    <button type="submit">שמור</button>
</form>

<a href="/tasks">חזרה לרשימת משימות</a>

<%- include('../partials/footer') %>
